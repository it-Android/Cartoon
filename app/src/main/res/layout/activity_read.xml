<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReadActivity">

    <TextView
        android:id="@+id/read_tv_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:text="漫画章节信息正在获取，请稍等！"/>

    <com.jq.cartoon1.myview.ZoomRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/read_recycle">

    </com.jq.cartoon1.myview.ZoomRecyclerView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5sp"
        android:layout_marginLeft="-5dp"
        android:layout_marginBottom="-5dp"
        app:cardBackgroundColor="#A4464646"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5sp"
            android:paddingTop="3sp">
            <TextView
                android:id="@+id/read_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="无章节"/>

            <TextView
                android:id="@+id/read_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:layout_marginRight="10sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>