<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/recycle_item_preview_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10px"
        app:cardCornerRadius="10px">
        <ImageView
            android:id="@+id/recycle_item_preview_img"
            android:layout_width="300px"
            android:layout_height="400px"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/recycle_item_preview_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="#BF464646"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="7"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:singleLine="true"
            android:text="章节信息"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recycle_item_preview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycle_item_preview_cardView"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="13sp"
        android:maxEms="6"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="漫画名称" />
    <TextView
        android:id="@+id/recycle_item_preview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycle_item_preview_name"
        android:layout_centerHorizontal="true"
        android:textColor="#FF0606"
        android:textSize="12sp"
        android:text="时间" />
</RelativeLayout>
