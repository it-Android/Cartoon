<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/recycle_item_collect_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10px"
        app:cardCornerRadius="10px">
        <ImageView
            android:id="@+id/recycle_item_collect_img"
            android:layout_width="300px"
            android:layout_height="400px"
            android:background="#303030"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/recycle_item_collect_tv_upData"
            android:layout_marginTop="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新"
            android:background="@drawable/text_updata_bg_display"
            android:layout_marginLeft="-2sp"
            android:textSize="10sp"
            android:textColor="#FFFFFF" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recycle_item_collect_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycle_item_collect_cardView"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_marginLeft="2dp"
        android:maxEms="6"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="漫画名称" />
    <TextView
        android:id="@+id/recycle_item_collect_tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycle_item_collect_tv_name"
        android:layout_marginLeft="2dp"
        android:textColor="#666666"
        android:textSize="11sp"
        android:text="100/1234" />
</RelativeLayout>
